{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src/**/*"],
  "exclude": ["**/node_modules"]
}